@model gestionBiblioteca.Models.Libro

<h2 class="text-center mb-4">Agregar Libro</h2>

<div class="card shadow-lg p-4">
    <h4 class="text-primary text-center">Complete la información</h4>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="mb-3">
                    <label asp-for="Titulo" class="form-label fw-bold"></label>
                    <input asp-for="Titulo" class="form-control" placeholder="Ingrese el título del libro" />
                    <span asp-validation-for="Titulo" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AutorId" class="form-label fw-bold"></label>
                    <select asp-for="AutorId" class="form-select" asp-items="ViewBag.AutorId">
                        <option value="">Seleccione un autor</option>
                    </select>
                    <span asp-validation-for="AutorId" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center mt-3">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-plus-circle"></i> Agregar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
